<div>
  <h1>All Posted Jobs</h1>
  <hr />
  <%= button_to 'New Job', new_job_path, method: :get %>
  <% if @jobs.any? %>

  <div class='row'>

    <% @jobs.each do |job| %>

      <div class="panel panel-success">
        <div class="panel-heading"><%= link_to job_path(job) do %> Job Details <% end %></div>
        <div class="panel-body">
          <p>...</p>
        </div>

        <ul class="list-group">
          <li class="list-group-item"><%= job.PickupDate %></li>
          <li class="list-group-item"><%= job.DeliveryDate %></li>
          <li class="list-group-item"><%= job.address.StreetAddress %></li>
          <li class="list-group-item"><%= job.address.SubDistrict %></li>
          <li class="list-group-item"><%= job.address.District %></li>
          <li class="list-group-item"><%= job.address.Country %></li>
          <li class="list-group-item"><%= job.address.PostalCode %></li>
          <li class="list-group-item"><%= job.address.Province %></li>
          <li class="list-group-item"><%= link_to 'Edit Pickup or Delivery Dates', edit_job_path(job) %></li>
          <li class="list-group-item"><%= link_to 'Edit Address', jobs_path(@job, @address) %></li>
        </ul>
      </div>
    <% end %>
      <% else %>
        <h3>To get started, please create a Job.</h3>
      <% end %>
  </div>
</div>
