<%= form_for @job do |f| %>

  <div class="field">
    <%= f.label :pickup_location %>
    <%= f.text_field :pickup_location,  autofocus: true %>
  </div><br/>

  <div class="field">
    <%= f.label :dropoff_location %>
    <%= f.text_field :dropoff_location %>
  </div><br/>

  <div class="field">
    <%= f.label :pickup_date %>
    <%= f.date_field :pickup_date %>
  </div><br/>

  <div class="field">
    <%= f.label :dropoff_date %>
    <%= f.date_field :dropoff_date %>
  </div><br/>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div><br/>

  <div class="field">
    <%= f.label :special_notes %>
    <%= f.text_area :special_notes %>
  </div><br/>

	<%= f.submit %>

<% end %>
